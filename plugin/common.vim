set background=dark

set nocompatible

set ruler

set showcmd

set incsearch

set nohlsearch

set scrolljump=7

set scrolloff=7

set novisualbell
set t_vb=

set termencoding=utf-8

set hidden

set guioptions-=T

set ch=1

set mousehide

syntax on

set backspace=indent,eol,start whichwrap+=<,>,[,]

set statusline=%<%f%h%m%r\ %b\ %{&encoding}\ 0x\ \ %l,%c%V\ %P
set laststatus=2

set fo+=cr

set sessionoptions=curdir,buffers,tabpages

if !has('nvim')
    set viminfo='10,\"100,:20,%,n~/.viminfo
endif

let mapleader=","

set nobackup
set noswapfile

map Q <Nop>

if !has('nvim')
    set encoding=utf8
endif

vmap > >gv
vmap < <gv
